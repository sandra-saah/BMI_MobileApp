<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000"/> <!-- Transparent color -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <padding
                android:bottom="2dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp" />
        </shape>
    </item>
    <!-- Color Layer -->
    <item android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bmiOverweight"/> <!-- Background color -->
            <corners android:radius="16dp"/> <!-- Same rounded corners -->
        </shape>
    </item>
</layer-list>